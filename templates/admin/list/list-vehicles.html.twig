{% extends 'base.html.twig' %}

{% block container %}

<div class="container col-offset-2 col-12">
    <h2 class="title">Liste des véhicules </h2>
    <div class="table-responsive col-12">
        <table class="table table-striped table-sm table-admin">
            <thead>
            <tr>
                <th>Id</th>
                <th>Modele</th>
                <th>Numéro série</th>
            </tr>
            </thead>
            <tbody>
            {% for vehicle in vehicles %}
                <tr>
                    <td>{{ vehicle.id }}</td>
                    <td>{{ vehicle.model.name }}</td>
                    <td>{{ vehicle.licenseplate }}</td>
                    <td><a href="{{ path('delete_vehicle', {'id': vehicle.id}) }}" class="btn btn-edit">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
